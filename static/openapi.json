{
  "openapi": "3.0.1",
  "info": {
    "title": "Rust Gallery API",
    "description": "API for managing photo galleries with folders and tags",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8000",
      "description": "Main server"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local rust server"
    }
  ],
  "paths": {
    "/config": {
      "get": {
        "summary": "Get config information",
        "description": "Returns a application configuration",
        "operationId": "getConfig",
        "responses": {
          "200": {
            "description": "Config data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Config"
                }
              }
            }
          }
        },
        "tags": [
          "config"
        ]
      },
      "post": {
        "summary": "Update config information",
        "description": "Updates application configuration",
        "operationId": "updateConfig",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ConfigData"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Config updated successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string"
                    },
                    "config": {
                      "$ref": "#/components/schemas/Config"
                    }
                  }
                }
              }
            }
          }
        },
        "tags": [
          "config"
        ]
      }
    },
    "/folders/roots": {
      "get": {
        "summary": "Get all root folders",
        "description": "Returns a list of all root level folders in the gallery",
        "operationId": "getRoots",
        "responses": {
          "200": {
            "description": "A list of root folders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Root"
                  }
                }
              }
            }
          }
        },
        "tags": [
          "root"
        ]
      }
    },
    "/folders/json": {
      "get": {
        "tags": [
          "folder"
        ],
        "summary": "Get all folders",
        "description": "Returns a paginated list of all folders, with optional filtering by root folder and search term",
        "operationId": "getAllFolders",
        "parameters": [
          {
            "name": "root",
            "required": true,
            "in": "query",
            "description": "Root folder name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 15
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "searchby",
            "in": "query",
            "description": "Search query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of folders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Folder"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/json/name/{folderName}": {
      "get": {
        "tags": [
          "folder"
        ],
        "summary": "Get folder by name",
        "description": "Returns details of a specific folder by its name",
        "operationId": "getFolderByName",
        "parameters": [
          {
            "name": "folderName",
            "in": "path",
            "required": true,
            "description": "Name of the folder to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Folder details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Folder"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/delete": {
      "post": {
        "tags": [
          "folder"
        ],
        "summary": "Delete a folder",
        "description": "Deletes a folder and returns the number of affected rows",
        "operationId": "deleteFolder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "folder_name": {
                    "type": "string",
                    "description": "Name of the folder to delete"
                  }
                },
                "required": [
                  "folder_name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deletion status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "rows": {
                      "type": "integer",
                      "description": "Number of rows affected"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags/assign/folder": {
      "post": {
        "tags": [
          "tag"
        ],
        "summary": "Update folder tags",
        "description": "Updates the tags associated with a folder",
        "operationId": "updateFolderTags",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of tags to assign"
                  },
                  "folder_name": {
                    "type": "string",
                    "description": "Name of the folder"
                  }
                },
                "required": [
                  "tags",
                  "folder_name"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/json": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "Get photos by folder",
        "description": "Returns a paginated list of photos within a specified folder",
        "operationId": "getPhotosByFolder",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "description": "Folder name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 50
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of photos in the folder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonResponse"
                }
              }
            }
          }
        }
      }
    },
    "/files/random/json": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "Get random photos from a folder",
        "description": "Returns a random selection of photos from a specified folder",
        "operationId": "getRandomPhotos",
        "parameters": [
          {
            "name": "root",
            "in": "query",
            "description": "Root name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "extension",
            "in": "query",
            "description": "Extension file",
            "schema": {
              "enum": [
                "JPG",
                "PNG",
                "GIF",
                "WEBP"
              ]
            }
          },
          {
            "name": "folder",
            "in": "query",
            "description": "Folder name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "tag",
            "in": "query",
            "description": "Tag name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Size of the photos",
            "schema": {
              "type": "integer",
              "default": 200
            }
          },
          {
            "name": "equal",
            "in": "query",
            "description": "Per folder size enabled",
            "schema": {
              "type": "boolean",
              "default": true
            }
          },
          {
            "name": "equal_size",
            "in": "query",
            "description": "Per folder size photos",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Random photos from the folder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tags/assign": {
      "post": {
        "tags": [
          "tag"
        ],
        "summary": "Update photo tags",
        "description": "Updates the tags associated with a specific photo",
        "operationId": "updatePhotoTags",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of tags to assign"
                  },
                  "image_hash": {
                    "type": "string",
                    "description": "Hash of the image"
                  }
                },
                "required": [
                  "tags",
                  "image_hash"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags": {
      "get": {
        "tags": [
          "tag"
        ],
        "summary": "Get all tags",
        "description": "Returns a list of all tags, optionally filtered by folder",
        "operationId": "getAllTags",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "description": "Optional folder name to filter tags",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of all tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/task/index": {
      "get": {
        "tags": [
          "task"
        ],
        "summary": "Trigger all photos indexation",
        "description": "Initiates the indexing process for all photos, with an option to force reindexing",
        "operationId": "indexPhotos",
        "parameters": [
          {
            "name": "force",
            "in": "query",
            "description": "Optional action to force index all files",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Indexation result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskIndexResponse"
                }
              }
            }
          }
        }
      }
    },
    "/files/{hash}/download": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "Download or retrieve a file",
        "description": "Returns a file by its hash, with optional resizing",
        "operationId": "retrieveFile",
        "parameters": [
          {
            "name": "hash",
            "in": "path",
            "required": true,
            "description": "Hash of the file to retrieve",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "width",
            "in": "query",
            "description": "Desired width for resizing",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "height",
            "in": "query",
            "description": "Desired height for resizing",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "File content",
            "content": {
              "image/*": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/files/thumbnail/folder/download": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "Get folder thumbnail",
        "description": "Returns a thumbnail image for a folder",
        "operationId": "getFolderThumbnail",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "required": true,
            "description": "Name of the folder",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "width",
            "in": "query",
            "description": "Thumbnail width",
            "schema": {
              "type": "integer",
              "default": 300
            }
          },
          {
            "name": "height",
            "in": "query",
            "description": "Thumbnail height",
            "schema": {
              "type": "integer",
              "default": 300
            }
          },
          {
            "name": "number",
            "in": "query",
            "description": "Thumbnail number/index",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Thumbnail image",
            "content": {
              "image/jpeg": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/files/thumbnail/photo/download": {
      "get": {
        "tags": [
          "files"
        ],
        "summary": "Get photo thumbnail",
        "description": "Returns a thumbnail image for a specific photo",
        "operationId": "getPhotoThumbnail",
        "parameters": [
          {
            "name": "hash",
            "in": "query",
            "required": true,
            "description": "Hash of the photo",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "width",
            "in": "query",
            "description": "Thumbnail width",
            "schema": {
              "type": "integer",
              "default": 300
            }
          },
          {
            "name": "height",
            "in": "query",
            "description": "Thumbnail height",
            "schema": {
              "type": "integer",
              "default": 300
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Thumbnail image",
            "content": {
              "image/jpeg": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          }
        }
      }
    },
    "/files/task/cancel": {
      "get": {
        "tags": [
          "task"
        ],
        "summary": "Cancel the indexation task",
        "description": "Cancels any ongoing photo indexation task",
        "operationId": "cancelIndexTask",
        "responses": {
          "200": {
            "description": "Indexation task cancel result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TaskCancelResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Config": {
        "type": "object",
        "description": "Represents a config data of the server",
        "properties": {
          "random_equal_folders": {
            "type": "integer",
            "description": "Number of equal photo per folder"
          },
          "photo_per_random": {
            "type": "integer",
            "description": "Number of photos per random session"
          },
          "folders_per_page": {
            "type": "integer",
            "description": "Number of folders per page"
          },
          "equal_enabled": {
            "type": "boolean",
            "description": "Whether equal folder distribution is enabled"
          }
        }
      },
      "Root": {
        "type": "object",
        "description": "Represents a root level folder in the gallery",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the root folder"
          },
          "name": {
            "type": "string",
            "description": "Name of the root folder"
          },
          "path": {
            "type": "string",
            "description": "File system path to the root folder"
          }
        }
      },
      "Folder": {
        "type": "object",
        "description": "Represents a folder in the gallery",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the folder"
          },
          "name": {
            "type": "string",
            "description": "Name of the folder"
          },
          "path": {
            "type": "string",
            "description": "File system path to the folder"
          },
          "thumbnail": {
            "type": "string",
            "description": "URL or path to the folder's thumbnail image"
          },
          "tags": {
            "type": "array",
            "description": "List of tags associated with the folder",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Photo": {
        "type": "object",
        "description": "Represents a photo in the gallery",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the photo"
          },
          "filename": {
            "type": "string",
            "description": "Name of the photo file"
          },
          "path": {
            "type": "string",
            "description": "File system path to the photo"
          },
          "hash": {
            "type": "string",
            "description": "Unique hash of the photo file"
          },
          "width": {
            "type": "integer",
            "description": "Width of the photo in pixels"
          },
          "height": {
            "type": "integer",
            "description": "Height of the photo in pixels"
          },
          "tags": {
            "type": "array",
            "description": "List of tags associated with the photo",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "JsonFilePhoto": {
        "type": "object",
        "description": "Represents a photo with additional JSON metadata",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Unique identifier for the photo"
          },
          "filename": {
            "type": "string",
            "description": "Name of the photo file"
          },
          "path": {
            "type": "string",
            "description": "File system path to the photo"
          },
          "hash": {
            "type": "string",
            "description": "Unique hash of the photo file"
          },
          "width": {
            "type": "integer",
            "description": "Width of the photo in pixels"
          },
          "height": {
            "type": "integer",
            "description": "Height of the photo in pixels"
          },
          "tags": {
            "type": "array",
            "description": "List of tags associated with the photo",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "JsonResponse": {
        "type": "object",
        "description": "Standard response format for paginated results",
        "properties": {
          "data": {
            "type": "array",
            "description": "Array of photo data",
            "items": {
              "$ref": "#/components/schemas/JsonFilePhoto"
            }
          },
          "total": {
            "type": "integer",
            "description": "Total number of items available"
          },
          "per_page": {
            "type": "integer",
            "description": "Number of items per page"
          },
          "current_page": {
            "type": "integer",
            "description": "Current page number"
          },
          "total_pages": {
            "type": "integer",
            "description": "Total number of pages available"
          }
        }
      },
      "JsonResponseTags": {
        "type": "object",
        "description": "Response format for tag-related operations",
        "properties": {
          "tags": {
            "type": "array",
            "description": "List of tags",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "ConfigData": {
        "type": "object",
        "description": "Configuration data for updating server settings",
        "properties": {
          "random_equal_folders": {
            "type": "integer",
            "description": "Number of equal photo per folder"
          },
          "photo_per_random": {
            "type": "integer",
            "description": "Number of photos per random session"
          },
          "folders_per_page": {
            "type": "integer",
            "description": "Number of folders per page"
          },
          "equal_enabled": {
            "type": "boolean",
            "description": "Whether equal folder distribution is enabled"
          }
        },
        "required": [
          "random_equal_folders",
          "photo_per_random",
          "folders_per_page",
          "equal_enabled"
        ]
      },
      "TaskIndexResponse": {
        "type": "object",
        "description": "Response for indexing task operations",
        "properties": {
          "status": {
            "type": "string",
            "description": "Status of the operation"
          },
          "task_running": {
            "type": "boolean",
            "description": "Whether a task is currently running"
          },
          "message": {
            "type": "string",
            "description": "Status message"
          },
          "last_indexed": {
            "type": "integer",
            "description": "Timestamp of last indexation",
            "format": "int64",
            "nullable": true
          }
        }
      },
      "TaskCancelResponse": {
        "type": "object",
        "description": "Response for task cancellation",
        "properties": {
          "status": {
            "type": "string",
            "description": "Status of the cancellation"
          },
          "message": {
            "type": "string",
            "description": "Status message"
          },
          "task_running": {
            "type": "boolean",
            "description": "Whether a task was running"
          }
        }
      }
    }
  }
}