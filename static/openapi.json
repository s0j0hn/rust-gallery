{
  "openapi": "3.0.1",
  "info": {
    "title": "Rust Gallery API",
    "description": "API for managing photo galleries with folders and tags",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Main server"
    }
  ],
  "paths": {
    "/folders/roots": {
      "get": {
        "summary": "Get all root folders",
        "operationId": "getRoots",
        "responses": {
          "200": {
            "description": "A list of root folders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Root"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/json": {
      "get": {
        "summary": "Get all folders",
        "operationId": "getAllFolders",
        "parameters": [
          {
            "name": "root",
            "in": "query",
            "description": "Root folder name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 15
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "searchby",
            "in": "query",
            "description": "Search query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A list of folders",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Folder"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/json/name/{folderName}": {
      "get": {
        "summary": "Get folder by name",
        "operationId": "getFolderByName",
        "parameters": [
          {
            "name": "folderName",
            "in": "path",
            "required": true,
            "description": "Name of the folder to retrieve",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Folder details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Folder"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/folders/delete": {
      "post": {
        "summary": "Delete a folder",
        "operationId": "deleteFolder",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "data": {
                    "type": "string",
                    "description": "Name of the folder to delete"
                  }
                },
                "required": ["data"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deletion status",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "rows": {
                      "type": "integer",
                      "description": "Number of rows affected"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags/assign/folder": {
      "post": {
        "summary": "Update folder tags",
        "operationId": "updateFolderTags",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of tags to assign"
                  },
                  "folder_name": {
                    "type": "string",
                    "description": "Name of the folder"
                  }
                },
                "required": ["tags", "folder_name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/json": {
      "get": {
        "summary": "Get photos by folder",
        "operationId": "getPhotosByFolder",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "description": "Folder name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "per_page",
            "in": "query",
            "description": "Number of items per page",
            "schema": {
              "type": "integer",
              "default": 50
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of photos in the folder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonResponse"
                }
              }
            }
          }
        }
      }
    },
    "/photos": {
      "get": {
        "summary": "Get photos by tag",
        "operationId": "getPhotosByTag",
        "parameters": [
          {
            "name": "tag",
            "in": "query",
            "description": "Tag to filter by",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of photos with the specified tag",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Photo"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/random/json": {
      "get": {
        "summary": "Get random photos from a folder",
        "operationId": "getRandomPhotos",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "description": "Folder name",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "size",
            "in": "query",
            "description": "Size of the photos",
            "schema": {
              "type": "integer",
              "default": 200
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Random photos from the folder",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/JsonResponse"
                }
              }
            }
          }
        }
      }
    },
    "/tags/assign": {
      "post": {
        "summary": "Update photo tags",
        "operationId": "updatePhotoTags",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of tags to assign"
                  },
                  "image_hash": {
                    "type": "string",
                    "description": "Hash of the image"
                  }
                },
                "required": ["tags", "image_hash"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tags": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tags": {
      "get": {
        "summary": "Get all tags",
        "operationId": "getAllTags",
        "parameters": [
          {
            "name": "folder",
            "in": "query",
            "description": "Optional folder name to filter tags",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of all tags",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/task/index": {
      "get": {
        "summary": "Trigger all photos indexation",
        "operationId": "indexPhotos",
        "parameters": [
          {
            "name": "force",
            "in": "query",
            "description": "Optional action to force index all files",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Indexation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "indexed": {
                      "type": "integer",
                      "description": "Number of indexed photos"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/files/task/cancel": {
      "get": {
        "summary": "Cancel the indexation task",
        "operationId": "cancelIndexTask",
        "responses": {
          "200": {
            "description": "Indexation tsk cancel result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_running": {
                      "type": "boolean"
                    },
                    "message": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Root": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          }
        }
      },
      "Folder": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "Photo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "filename": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          },
          "width": {
            "type": "integer"
          },
          "height": {
            "type": "integer"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "JsonFilePhoto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "filename": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "hash": {
            "type": "string"
          },
          "width": {
            "type": "integer"
          },
          "height": {
            "type": "integer"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "JsonResponse": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/JsonFilePhoto"
            }
          },
          "total": {
            "type": "integer"
          },
          "per_page": {
            "type": "integer"
          },
          "current_page": {
            "type": "integer"
          },
          "total_pages": {
            "type": "integer"
          }
        }
      },
      "JsonResponseTags": {
        "type": "object",
        "properties": {
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}